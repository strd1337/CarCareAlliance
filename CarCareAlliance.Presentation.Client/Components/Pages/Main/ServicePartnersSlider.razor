<MudPaper id="service-partners-slider-id" Height="850px" MaxWidth="1500px" Elevation="0" Class="mud-container d-flex align-center justify-center">
    <MudCarousel @ref="carousel"
                 ItemsSource="@source"
                 @bind-SelectedIndex="selectedIndex"
                 ShowBullets="false"
                 ShowArrows="false"
                 EnableSwipeGesture="true"
                 AutoCycle="true"
                 Style="width: 100%; height: 100%;">
        <ItemTemplate>
            <MudCard Elevation="0">
                <MudCardHeader>
                    <CardHeaderContent>
                        <MudText Typo="Typo.h5">Partner name</MudText>
                        <MudText Typo="Typo.body1">Partner description</MudText>
                    </CardHeaderContent>
                    <CardHeaderActions>
                        <MudMenu Icon="@Icons.Material.Outlined.MoreHoriz">
                            <MudMenuItem>Location</MudMenuItem>
                            <MudMenuItem>Mechanics</MudMenuItem>
                            <MudMenuItem>Services</MudMenuItem>
                        </MudMenu>
                    </CardHeaderActions>
                </MudCardHeader>
                <MudImage Src="assets/partner.jpg" Style="width: 100%; height: auto; object-fit: cover;" />
            </MudCard>
        </ItemTemplate>
    </MudCarousel>
</MudPaper>