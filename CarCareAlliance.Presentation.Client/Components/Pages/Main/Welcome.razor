<MudPaper Elevation="0" Class="background-image" Width="100%" Height="100vh" style="position: relative;">
    <MudImage src="/assets/main.jpg"
              Alt="Background Image"
              Style="position: absolute;
                         top: 0;
                         left: 0;
                         width: 100%;
                         height: 100%;
                         object-fit: cover;" />

    <MudContainer Style="position: absolute;
                                         top: 50%;
                                         left: 50%;
                                         transform: translate(-50%, -50%);
                                         text-align: center;
                                         z-index: 1;">
        <MudCardHeader>
            <CardHeaderContent>
                <MudText Typo="Typo.h4" Align="Align.Center" Style="@($"color:{Colors.Shades.White};")">Welcome to CarCareAlliance</MudText>
                <MudText Typo="Typo.body1" Align="Align.Center" Style="@($"color:{Colors.Shades.White};")">Discover the best car services in town</MudText>
                <MudButton Href="#services" Variant="Variant.Filled" Color="Color.Primary" Style="margin-top: 30px;">Explore Services</MudButton>
            </CardHeaderContent>
        </MudCardHeader>
    </MudContainer>
</MudPaper>
