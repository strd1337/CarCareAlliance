@using System.ComponentModel.DataAnnotations
@using CarCareAlliance.Presentation.Client.Models.ServicePartners

<MudDialog>
    <DialogContent>
        <MudForm Model="@Model" @ref="@form" @bind-IsValid="@isValid">
            <MudGrid>
                <MudItem xs="12" md="6">
                    <MudTextField Variant="Variant.Outlined"
                                  Label="Latitude"
                                  ReadOnly="IsReadOnly"
                                  Required="true"
                                  RequiredError="Latitude is required!"
                                  @bind-Value="Model.Location.Latitude"
                                  For="@(() => Model.Location.Latitude)"></MudTextField>
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField Variant="Variant.Outlined"
                                  Label="Longitude"
                                  ReadOnly="IsReadOnly"
                                  Required="true"
                                  RequiredError="Longitude is required!"
                                  @bind-Value="Model.Location.Longitude"
                                  For="@(() => Model.Location.Longitude)"></MudTextField>
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField Variant="Variant.Outlined"
                                  Label="Address"
                                  ReadOnly="IsReadOnly"
                                  Required="true"
                                  RequiredError="Address is required!"
                                  @bind-Value="Model.Location.Address"
                                  For="@(() => Model.Location.Address)"></MudTextField>
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField Variant="Variant.Outlined"
                                  Label="City"
                                  ReadOnly="IsReadOnly"
                                  Required="true"
                                  RequiredError="City is required!"
                                  @bind-Value="Model.Location.City"
                                  For="@(() => Model.Location.City)"></MudTextField>
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField Variant="Variant.Outlined"
                                  Label="Country"
                                  ReadOnly="IsReadOnly"
                                  Required="true"
                                  RequiredError="Country is required!"
                                  @bind-Value="Model.Location.Country"
                                  For="@(() => Model.Location.Country)"></MudTextField>
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField Variant="Variant.Outlined"
                                  Label="Postal code"
                                  ReadOnly="IsReadOnly"
                                  Required="true"
                                  RequiredError="Postal code is required!"
                                  @bind-Value="Model.Location.PostalCode"
                                  For="@(() => Model.Location.PostalCode)"></MudTextField>
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField Variant="Variant.Outlined"
                                  Label="Description"
                                  ReadOnly="IsReadOnly"
                                  Required="true"
                                  RequiredError="Description is required!"
                                  @bind-Value="Model.Location.Description"
                                  For="@(() => Model.Location.Description)"></MudTextField>
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField Variant="Variant.Outlined"
                                  Label="State"
                                  ReadOnly="IsReadOnly"
                                  Required="true"
                                  RequiredError="State is required!"
                                  @bind-Value="Model.Location.State"
                                  For="@(() => Model.Location.State)"></MudTextField>

                </MudItem>
            </MudGrid>
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton DisableElevation Variant="Variant.Outlined" Color="Color.Dark"
                    StartIcon="@Icons.Material.Filled.Cancel"
                    Size="Size.Small"
                    Style="margin-right: 4px; margin-bottom:4px"
                    IconColor="Color.Surface"
                    OnClick="Cancel">Cancel</MudButton>
         @if (!IsReadOnly)
        {
            <MudButton DisableElevation Variant="Variant.Outlined" Color="Color.Primary"
                        StartIcon="@Icons.Material.Filled.Save"
                        Size="Size.Small"
                        Disabled="@(!isValid)"
                        Style="margin-right: 4px; margin-bottom:4px"
                        IconColor="Color.Surface"
                        OnClick="Save">Save</MudButton>
        }
    </DialogActions>
</MudDialog>