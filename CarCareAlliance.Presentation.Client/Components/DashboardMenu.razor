<MudDrawer Breakpoint="Breakpoint.Md"
           Class="side-menu"
           Elevation="5"
           Open="DrawerOpen"
           Variant="DrawerVariant.Responsive"
           ClipMode="DrawerClipMode.Always">
    <MudDrawerHeader Class="align-center d-flex align-center pa-0">
        <MudIcon Class="ml-6 mr-2"
                 Color="Color.Primary"
                 Icon="@Icons.Material.Rounded.Dashboard"
                 Size="Size.Large" />
        <MudText Typo="Typo.subtitle2">
            CarCareAlliance
        </MudText>
    </MudDrawerHeader>

    <MudNavMenu>
        <MudNavLink Icon="@Icons.Material.Rounded.TireRepair" Href="/dashboard/servicepartners">Manage service partners</MudNavLink>
        <MudNavLink Icon="@Icons.Material.Rounded.Person" Href="/dashboard/mechanics">Manage mechanics</MudNavLink>
        <MudNavLink Icon="@Icons.Material.Rounded.People" Href="/dashboard/users">Manage users</MudNavLink>
        <MudNavLink Icon="@Icons.Material.Rounded.CreditCard" Href="/dashboard/tickets">Manage tickets</MudNavLink>
    </MudNavMenu>

    <MudDivider Class="mt-auto"></MudDivider>
    <MudNavMenu Class="d-flex justify-space-between pa-4">
        <MudText Style="font-size:0.625rem;line-height:1.125rem;color:#6F6F6F !important">2024 Copyright.</MudText>
        <MudText Class="" Style="font-size:0.625rem;line-height:1.125rem;color:#6F6F6F !important">0.0.01</MudText>
    </MudNavMenu>

</MudDrawer>

@code
{
    [EditorRequired][Parameter] public EventCallback<bool> DrawerOpenChanged { get; set; }

    [EditorRequired][Parameter] public bool DrawerOpen { get; set; } = true;
}