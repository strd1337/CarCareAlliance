@inherits LayoutComponentBase
@layout MainLayout

<MudLayout>
    <AuthorizeView>
        <NotAuthorized>
            <RedirectToLogin />
        </NotAuthorized>
        <Authorized>
            <DashboardMenu DrawerOpen="_dashboardNavigationMenuDrawerOpen" DrawerOpenChanged="DashboardNavigationMenuDrawerOpenChangedHandler" />
            <MudMainContent Class="pa-0">
                <MudContainer MaxWidth="MaxWidth.ExtraLarge">
                    @Body
                </MudContainer>
            </MudMainContent>
        </Authorized>
    </AuthorizeView>
</MudLayout>

@code {
    private bool _dashboardNavigationMenuDrawerOpen = true;

    protected void DashboardNavigationMenuDrawerOpenChangedHandler(bool state)
    {
        _dashboardNavigationMenuDrawerOpen = state;
    }
}
